<body class="tool">
		<div class="group-search row">
				<%= form_tag products_path, :method => :get do %>
					<div class="col-sm-2">
						<%= collection_select(:category, nil,  Category.all, :name, :name,{ :selected => params[:category],:include_blank => 'All'}, {class: "btn btn-default dropdown-toggle"}) %>
					</div>
					<div class="col-sm-4">
				    <%= text_field_tag :search, params[:search] , class: 'form-control' %>
				    </div>
				    <div class="col-sm-1">
				    <%= button_tag(type: "submit", class: "btn btn-default", :name => nil) do %>
    					<span class="glyphicon glyphicon-search"></span>Search
					<% end %>
				<% end %>
				</div>
				</div>
</body>