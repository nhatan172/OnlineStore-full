<h4>
<%= link_to "Home" , root_path %>
<span class="glyphicon glyphicon-chevron-right"></span> Orders history</h4>
<% if @orders.any? %>
<div class="panel panel-default">
  <div class="panel-heading">Orders</div>

  <table class="table table-striped" id="cart_items">
    <tr>
      <th>Id</th>
      <th >Customer Name</th>
      <th >Payment</th>
      <th >Date Time</th>

    <% for order in @orders %>
      <tr class="<%= cycle :odd, :even %>">
        <td><%= order.id %>
        </td>
        <td ><%= order.user.name %></td>
        <td ><%= number_to_currency(order.payment) %></td>
        <td ><%= order.created_at %></td>
        <td><%= link_to "View" , order,  :class => "btn  btn-info" %>
        <% end %>
    </tr>
    </tr>
  </table>
  </div>
  <div class="paginate">
  <%= will_paginate %>
  </div>
  <% else %>
  <br><br>
  <h4>You haven't any orders</h4>
  <% end %>